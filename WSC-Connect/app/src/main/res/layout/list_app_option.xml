<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_app_option_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_list"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:paddingTop="@dimen/layout_margin">

        <ImageView
            android:id="@+id/list_app_option_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layout_margin_small"
            android:layout_marginStart="@dimen/layout_padding"
            android:layout_toEndOf="@id/list_app_option_icon"
            android:layout_toStartOf="@+id/list_app_option_refresh"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_app_option_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@drawable/text_list"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/list_app_option_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_toStartOf="@+id/list_app_option_more"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_refresh_black_24dp" />

        <ImageView
            android:id="@+id/list_app_option_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/list_app_option_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:visibility="gone" />
</LinearLayout>