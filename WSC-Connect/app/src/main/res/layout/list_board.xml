<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list"
    android:paddingBottom="@dimen/layout_padding"
    android:paddingEnd="@dimen/layout_padding"
    android:paddingStart="@dimen/layout_padding"
    android:paddingTop="@dimen/layout_padding">

    <ImageView
        android:id="@+id/list_board_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/list_board_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_margin_small"
        android:layout_marginStart="@dimen/layout_margin_small"
        android:layout_toEndOf="@id/list_board_icon"
        android:layout_toStartOf="@id/list_board_unread_threads"
        android:textColor="@drawable/text_list" />

    <TextView
        android:id="@+id/list_board_unread_threads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/badge"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>